{
  "name": "react-currency-hooks",
  "version": "1.2.3",
  "description": "Currency converter React hook",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-currency-hooks.cjs.js",
  "module": "lib/react-currency-hooks.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cool-hooks/react-currency-hooks.git"
  },
  "keywords": [
    "currency",
    "converter",
    "money",
    "hooks",
    "react",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/cool-hooks/react-currency-hooks/issues"
  },
  "homepage": "https://github.com/cool-hooks/react-currency-hooks#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@testing-library/react-hooks": "^5.0.3",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "@typescript-eslint/parser": "^4.15.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "^16.13.1",
    "react-test-renderer": "^17.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5",
    "semantic-release": "^17.3.9"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
